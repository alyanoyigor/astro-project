---
import { changeLanguage, setDefaultNamespace, t } from "i18next";
import Layout from "../layouts/Layout.astro";

changeLanguage("en");

setDefaultNamespace("blog");
---

<Layout title={t('meta.title')} description={t('meta.description')}>
  <div class="container mx-auto px-4 py-8">
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold">{t('title')}</h1>
      <p class="text-lg text-gray-600">{t('subtitle')}</p>
    </div>
    
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <article class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold">{t('post1.title')}</h2>
        <p class="text-gray-700 mt-2">{t('post1.description')}</p>
      </article>

      <article class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold">{t('post2.title')}</h2>
        <p class="text-gray-700 mt-2">{t('post2.description')}</p>
      </article>

      <article class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold">{t('post3.title')}</h2>
        <p class="text-gray-700 mt-2">{t('post3.description')}</p>
      </article>
    </div>
  </div>
</Layout>
