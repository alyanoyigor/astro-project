---
import { t, changeLanguage, setDefaultNamespace } from "i18next";
import Layout from "../../layouts/Layout.astro";
import Counter from "../../components/Counter";

changeLanguage("fr");

setDefaultNamespace("home");
---

<Layout title={t('meta.title')} description={t('meta.description')}>
  <main class="container mx-auto text-center mt-10">
    <h2 class="text-3xl font-semibold">{t('title')}</h2>
    <p class="text-gray-600 mt-4">{t('description')}</p>

    <div class="flex justify-center mt-6">
      <Counter client:load />
    </div>
  </main>
</Layout>
