---
import { changeLanguage, setDefaultNamespace, t } from "i18next";
import Layout from "../layouts/Layout.astro";

changeLanguage("en");

setDefaultNamespace("about");
---

<Layout title={t('meta.title')} description={t('meta.description')}>
  <div class="max-w-3xl mx-auto p-6 bg-white shadow-lg mt-10 rounded-lg">
    <h1 class="text-3xl font-bold text-center mb-4">{t('title')}</h1>
    <p class="text-lg text-justify mb-4">
    {t('description.1')}
    </p>
    <p class="text-lg text-justify mb-4">
      {t('description.2')}
    </p>
    <p class="text-lg text-justify">
      {t('description.3')}
    </p>
  </div>
</Layout>
